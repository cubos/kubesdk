{
  "name": "kubesdk",
  "version": "0.0.0",
  "description": "Kubernetes SDK",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "test": "$(node spec/setup.js) && jest -w10",
    "eslint:fix": "eslint --fix '**/*.{t,j}s'",
    "eslint:check": "eslint '**/*.{t,j}s'",
    "build": "tsc"
  },
  "keywords": [],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cubos/kubesdk.git"
  },
  "bugs": {
    "url": "https://github.com/cubos/kubesdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/cubos/kubesdk#readme",
  "dependencies": {
    "ajv": "^8.6.2",
    "axios": "^0.21.3",
    "axios-logger": "^2.5.0",
    "axios-retry": "^3.1.9",
    "command-line-args": "^5.2.0",
    "command-line-usage": "^6.1.1",
    "js-yaml": "^4.1.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.0",
    "ws": "^8.2.1",
    "zip-a-folder": "^1.1.0"
  },
  "devDependencies": {
    "@cubos/eslint-config": "^1.0.553260",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/jest": "^27.0.1",
    "@types/js-yaml": "^4.0.3",
    "@types/json-schema": "^7.0.9",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.7.10",
    "@types/rimraf": "^3.0.2",
    "@types/ws": "^8.2.3",
    "as-typed": "^1.3.0",
    "jest": "^27.1.0",
    "jest-extended": "^0.11.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/spec/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/spec/utils.ts"
    ],
    "verbose": true,
    "testTimeout": 60000,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  }
}
