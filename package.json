{
  "name": "kubesdk",
  "version": "0.0.0",
  "description": "Kubernetes SDK",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "test": "$(node spec/setup.js) && jest -w10",
    "eslint:fix": "eslint --fix '**/*.{t,j}s'",
    "eslint:check": "eslint '**/*.{t,j}s'",
    "build": "tsc"
  },
  "keywords": [],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cubos/kubesdk.git"
  },
  "bugs": {
    "url": "https://github.com/cubos/kubesdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/cubos/kubesdk#readme",
  "dependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "axios-logger": "^2.6.1",
    "axios-retry": "^3.3.1",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "js-yaml": "^4.1.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^4.0.4",
    "slugify": "^1.6.5",
    "ws": "^8.8.1",
    "zip-a-folder": "^1.1.5"
  },
  "devDependencies": {
    "@cubos/eslint-config": "^2.0.631875",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/jest": "^29.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/json-schema": "^7.0.11",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.7.18",
    "@types/rimraf": "^3.0.2",
    "@types/ws": "^8.5.3",
    "as-typed": "^1.3.2",
    "jest": "^29.0.3",
    "jest-extended": "^3.1.0",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/spec/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/spec/utils.ts"
    ],
    "verbose": true,
    "testTimeout": 60000,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  }
}
