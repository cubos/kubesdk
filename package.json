{
  "name": "kubeoperator",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/main.ts",
    "test": "$(node spec/setup.js) && jest -w10"
  },
  "keywords": [],
