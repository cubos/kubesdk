    "js-yaml": "^3.14.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.14",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.11.2",
    "jest": "^26.5.2",
    "jest-extended": "^0.11.5",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
