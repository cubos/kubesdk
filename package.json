{
  "name": "kubesdk",
  "version": "0.0.0",
  "description": "Kubernetes SDK",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "test": "$(node spec/setup.js) && jest -w10",
    "eslint:fix": "eslint --fix '**/*.{t,j}s'",
    "eslint:check": "eslint '**/*.{t,j}s'",
    "build": "tsc"
  },
  "keywords": [],
  "author": "Guilherme Bernal <guilherme@cubos.io>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lbguilherme/kubesdk.git"
  },
  "bugs": {
    "url": "https://github.com/lbguilherme/kubesdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/lbguilherme/kubesdk#readme",
  "dependencies": {
    "ajv": "^8.3.0",
    "axios": "^0.21.1",
    "axios-logger": "^2.5.0",
    "axios-retry": "^3.1.9",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.1",
    "js-yaml": "^4.1.0",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@cubos/eslint-config": "^1.0.526612",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/json-schema": "^7.0.7",
    "@types/node": "^15.0.3",
    "@types/ws": "^7.4.4",
    "as-typed": "^1.3.0",
    "jest": "^27.0.1",
    "jest-extended": "^0.11.5",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/spec/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/spec/utils.ts"
    ],
    "verbose": true,
    "testTimeout": 60000,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  }
}
